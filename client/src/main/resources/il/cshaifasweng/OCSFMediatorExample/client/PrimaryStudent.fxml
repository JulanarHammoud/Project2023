<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.controller.StudentController">
   <children>
      <ImageView fitHeight="500.0" fitWidth="700.0">
         <image>
            <Image url="@Student.jpg" />
         </image>
      </ImageView>
      <Label fx:id="StName" layoutX="58.0" layoutY="14.0" prefHeight="58.0" prefWidth="497.0" text="Student:">
         <font>
            <Font name="System Bold" size="40.0" />
         </font>
         <textFill>
            <LinearGradient endX="1.0" endY="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color red="0.6313725709915161" green="0.6117647290229797" blue="0.13333334028720856" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </textFill>
      </Label>
      <Button fx:id="grades" layoutX="58.0" layoutY="256.0" mnemonicParsing="false" onAction="#gradesAct" prefHeight="54.0" prefWidth="168.0" text="Grades" textFill="#a19c22">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Button>
      <Button fx:id="exams" layoutX="58.0" layoutY="133.0" mnemonicParsing="false" onAction="#examsGold" prefHeight="54.0" prefWidth="162.0" text="Exams" textFill="#a19c22">
         <font>
            <Font name="System Bold" size="25.0" />
         </font>
      </Button>
      <Accordion />
      <Button layoutX="591.0" layoutY="22.0" mnemonicParsing="false" onAction="#LogOut" text="LogOut" textFill="#a19c22">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font></Button>
   </children>
</AnchorPane>
